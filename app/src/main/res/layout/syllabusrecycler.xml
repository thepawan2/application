<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground"
        android:padding="16dp">

        <ImageView
            android:id="@+id/pdfimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/pdflogo"/>

        <TextView
            android:id="@+id/hearder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Header Text"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/pdfimg"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_below="@+id/hearder"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/pdfimg">

            <ImageView
                android:id="@+id/readbook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/views"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/textviewbook"
                android:text="3111k"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/likebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/textlike"
                android:text="3111k"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/dislikebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/dislike"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/textdislike"
                android:text="3111k"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="15sp"
                />



        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>